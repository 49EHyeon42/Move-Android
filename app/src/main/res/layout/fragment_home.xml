<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentHome_supportGoogleMapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/fragmentHome_timeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="경과 시간" />

        <TextView
            android:id="@+id/fragmentHome_totalDistanceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="총 이동 거리" />

        <TextView
            android:id="@+id/fragmentHome_averageSpeedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="평균 속력" />

        <TextView
            android:id="@+id/fragmentHome_stepTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="걸음 수" />

        <TextView
            android:id="@+id/fragmentHome_calorieTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="칼로리 소모량" />

        <Button
            android:id="@+id/fragmentHome_trackingServiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</layout>