<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragmentStatistic_recyclerView_elapsedTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_elapsedTimeTextView_text" />

            <TextView
                android:id="@+id/fragmentStatistic_recyclerView_totalTravelDistanceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_totalTravelDistanceTextView_text" />

            <TextView
                android:id="@+id/fragmentStatistic_recyclerView_averageSpeedTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_averageSpeedTextView_text" />

            <TextView
                android:id="@+id/fragmentStatistic_recyclerView_stepTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_stepTextView_text" />

            <TextView
                android:id="@+id/fragmentStatistic_recyclerView_calorieConsumptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_calorieConsumptionTextView_text" />

        </LinearLayout>

        <ImageView
            android:id="@+id/fragmentStatistic_recyclerView_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />

    </LinearLayout>

</androidx.cardview.widget.CardView>