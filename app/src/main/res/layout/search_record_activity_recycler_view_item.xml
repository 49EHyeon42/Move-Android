<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/savedDate_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="저장 시간 : " />

            <TextView
                android:id="@+id/elapsedTime_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="경과 시간 : " />

            <TextView
                android:id="@+id/totalTravelDistance_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="총 이동 거리 : " />

            <TextView
                android:id="@+id/averageSpeed_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="평균 속력 : " />

            <TextView
                android:id="@+id/step_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="걸음 수 : " />

            <TextView
                android:id="@+id/calorieConsumption_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="칼로리 소모량 : " />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>